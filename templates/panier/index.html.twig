{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1 class="text-center">Panier</h1>

    {% if items %}
    {#Si j'ai des produits dans mon panier, j'affiche son contenu #}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><img src="{{item.product.image}}" alt="" width="50"></td>
                <td>{{item.product.price}}</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity }}</td>
                <td><a href="{{ path('cart_remove', {id: item.product.id}) }}" class"btn-sm btn-danger">x</a></td>
            </tr>
        {% endfor %}
        
        </tbody>
        <tfoot>
            <tr>
                <td colspan = "3" class="text-end">Total</td>
                <td colspan = "2" >{{total}}</td>
            </tr>
        </tfoot>
    </table>


    {% else %}
    <h2 class="text-center mt-5">Le panier est vide</h2>
    {% endif %}


{% endblock %}
